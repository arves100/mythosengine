create drawable="Sparks1" type=particle maxcount=4096
{
    position=0,-30,0;
    parts=10;
    life=1;
    speed=5;
    sphere=0.5;
    color=255,255,0,255,255,255;
    acceleration=0,-8,0;
}

animate drawable="Sparks1"
{
    velocity = 0,29,0;
    acceleration = 0,-8,0;
}

waitkey=2000;

modify drawable="Sparks1"
{
    parts=2000;
    life=1.5,1;
    speed=20;
    sphere=2;
}

waitkey=250;

modify drawable="Sparks1"
{
    parts=0;
}

waitkey=500;

