#--- .c, .cpp, .asm setup in standard include ---

#ÄÄÄ Assembly
{..\8bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\16bpp\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\newtri\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\screen\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

{..\boards\}.asm{}.obj:
   $(ASM) $(ASMOPTS) $<

#ÄÄÄ C++
{..\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch  $<

{..\8bpp}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch $<

{..\16bpp\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch $<

{..\newtri\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) /Yuvangogh.hpp /Fp$(LIB).pch $<

{..\screen}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) $<

{..\boards\}.cpp{}.obj:
        $(CPP) $(CCOPTIONS) $<

#±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
#
#                              Dependencies
#
#±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

$(LIB).pch :
    del vngpch.obj

vngpch.obj : ..\vngpch.cpp
    $(CPP) /Ycvangogh.hpp /Fp$(LIB).pch $(CCOPTIONS) ..\$*.cpp

